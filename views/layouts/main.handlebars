<body>
    {{!-- Backdrop for customized Modal --}}
    <div class="backdrop"></div>
    {{!-- Above is backdrop --}}

    {{!-- Nav Bar --}}
    <nav class="nav bg-style">
        <a class="nav-link active nav-color" href="/">News Pro</a>
        <a class="nav-link nav-color" href="/">Home</a>
        <a class="nav-link nav-color" href="/allsaved">Saved Articles</a>

        {{!-- Scrape Modal --}}
        <button type="button" class="btn btn-dark" data-toggle="modal" data-target="#exampleModal" id="scrape-button">
            Scrape Articles
        </button>

        <div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
            aria-hidden="true">
            <div class="modal-dialog" role="document">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="exampleModalLabel">Scrape Completed!</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        You successfully scraped 5 or 10 articles from New York Times!
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-outline-secondary" data-dismiss="modal"
                            id="scrape-ok-button">OK</button>
                    </div>
                </div>
            </div>
        </div>
        {{!-- Above is the Scrape Modal --}}


    </nav>
    {{!-- Above is the Nav Bar --}}


    {{!-- Jumbotron --}}
    <div class="jumbotron text-center bg-style">
        <h1 class="display-4">News Pro</h1>
        <p class="lead">Use this app to scrape articles from New York Times!</p>
    </div>
